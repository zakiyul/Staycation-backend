<div
  class="tab-pane fade"
  id="show-activity"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-header py-3">
      <h1>Avctivity</h1>
    </div>
    <div class="row">
      <div class="col-md-5">
        <div class="card-body">
          <form
            action="/admin/item/add/activity"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Enter name"
                required
              />
            </div>
            <div class="form-group">
              <label for="type">Type</label>
              <input
                type="text"
                name="type"
                id="type"
                class="form-control"
                placeholder="Enter Type"
                required
              />
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input
                type="file"
                name="image"
                id="image"
                class="form-control border-0"
                required
              />
            </div>
            <input type="hidden" value="<%= itemId%>" name="itemId" />
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
      </div>
      <div class="col-md-7">
        <div class="card-body">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="mydatatable"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <%for(let x =0; x < activity.length; x++) {%>
                <tr>
                  <td>
                    <%=x+1%>
                  </td>
                  <td>
                    <%= activity[x].name%>
                  </td>
                  <td>
                    <%= activity[x].type%>
                  </td>
                  <td>
                    <img
                      src="https://eki-admin-staycation.herokuapp.com/<%= activity[x].imageUrl%>"
                      alt="imageUrl"
                      width="70px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/<%= itemId%>/activity/<%=activity[x].id%>?_method=DELETE"
                      method="POST"
                    >
                      <a href="javascript:void()" type="button"
                        ><i
                          class="fas fa-edit btn btn-warning btn-circle btn-sm button-update"
                          data-id="<%=activity[x].id%>"
                          data-name="<%= activity[x].name%>"
                          data-type="<%= activity[x].type%>"
                        ></i
                      ></a>
                      <button
                        type="submit"
                        class="btn btn-danger btn-circle btn-sm"
                      >
                        <i class="fa fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <%}%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
